{
  "manifest_version": 3,
  "name": "Agentic Data Insight",
  "version": "0.1.0",
  "description": "...",

  "permissions": [
    "storage"
  ],

  "host_permissions": [
    "http://127.0.0.1:8000/*",
    "http://localhost:8000/*"
  ],

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "action": {
    "default_title": "Agentic Data Insight",
    "default_popup": "ui/panel.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/selection.js"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src http://127.0.0.1:8000 http://localhost:8000"
  }
}
